{
  "compilerOptions": {
    "target": "ES2017",
    "module": "None",
    "declaration": false,
    "outDir": "./out",
    "rootDir": "./typescript",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF"
  }
}
